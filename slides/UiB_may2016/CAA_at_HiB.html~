				      <pre id="editor">
DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGML.pl",
  "MathObjects.pl",
  "PGcourse.pl",
  "parserNumberWithUnits.pl",
  "contextArbitraryString.pl",
  "parserMultiAnswer.pl",
  "parserPopUp.pl",
  "contextInequalities.pl",
  "PGgraphmacros.pl",
  );

  #Set-up
  $f = Formula("sin(x)+x^2");
  $Df = $f->D;
		
TEXT(beginproblem());

		
  #######################################
  BEGIN_PGML
  If [:f(x) = [$f]:], then [:f'(x) = :] [______________________]{$Df}
  END_PGML
  #######################################


ENDDOCUMENT();
</pre>
				    </div>
				   
